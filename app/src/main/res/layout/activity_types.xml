<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFC107"
    tools:context=".TypesActivity">

    <TextView
        android:id="@+id/eiffelTowerTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/alfa_slab_one"
        android:text="Bananas\neffects on"
        android:textColor="@color/teal_700"
        android:textAlignment="center"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/chidrenButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/adultsButton"
        android:layout_width="180dp"
        android:layout_height="80dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/bg_textview"
        android:fontFamily="@font/alfa_slab_one"
        android:gravity="center"
        android:text="Adults"
        android:textColor="@color/teal_700"
        android:textSize="18sp"
        android:layout_marginEnd="48dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/adolescentsButton" />

    <TextView
        android:id="@+id/chidrenButton"
        android:layout_width="180dp"
        android:layout_height="80dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/bg_textview"
        android:fontFamily="@font/alfa_slab_one"
        android:gravity="center"
        android:text="Children"
        android:layout_marginEnd="48dp"
        android:textColor="@color/teal_700"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/adolescentsButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/adolescentsButton"
        android:layout_width="180dp"
        android:layout_height="80dp"
        android:layout_marginBottom="48dp"
        android:background="@drawable/bg_textview"
        android:fontFamily="@font/alfa_slab_one"
        android:gravity="center"
        android:text="Adolescents"
        android:textColor="@color/teal_700"
        android:textSize="18sp"
        android:layout_marginStart="48dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>